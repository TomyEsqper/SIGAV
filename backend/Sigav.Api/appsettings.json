{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=sigav;User Id=sigav_user;Password=sigav_password;"
  },
  "Redis": {
    "ConnectionString": "redis:6379"
  },
  "KeyVault": {
    "Url": ""
  },
  "Jwt": {
    "Key": "dev-secret-key-please-change-in-production-minimum-256-bits-for-security-this-is-a-very-long-key-to-meet-requirements",
    "Issuer": "sigav",
    "Audience": "sigav-clients"
  },
  "Auth": {
    "AccessTokenTtlMinutes": 15,
    "RateLimitWindowSeconds": 300,
    "RateLimitMaxAttempts": 5,
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "Logs/sigav-.log", "rollingInterval": "Day", "shared": true } }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "RateLimiting": {
    "MaxRequestsPerMinute": 100,
    "MaxRequestsPerHour": 1000
  },
  "Observability": {
    "Jaeger": {
      "Host": "localhost",
      "Port": 6831
    },
    "Otlp": {
      "Endpoint": "http://localhost:4317"
    },
    "Prometheus": {
      "Enabled": true,
      "Path": "/metrics"
    }
  },
  "Deployment": {
    "Region": "East US",
    "Environment": "Development"
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "BusetasExpirationMinutes": 10,
    "UsersExpirationMinutes": 60
  }
}
